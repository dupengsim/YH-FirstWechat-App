/**index.wxss**/
@import "../../icon/icon.wxss";
@import "nav_template/nav_template.wxss";


button::after{
  border:none;
}
.container {
  position: static;
}

.conversation_Btn {
  float: right;
  position: absolute;
  right: 0;
  top: 20rpx;
  box-shadow: 2rpx 3rpx 2rpx 1rpx #999;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  z-index: 99;
}

.con_contacts {
  position: absolute;
  top: 15rpx;
  bottom: 0;
  opacity: 0;
}

swiper {
  width: 85%;
  margin: 7.5% auto 0;
  height: 75%;
  position: absolute;
  left:7.5%;
}

swiper image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.iconCircle {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #fff;
  position: absolute;
  left: 20rpx;
  bottom: 50rpx;
  line-height: 56rpx;
  text-align: center;
}

.ifx {
  font-size: 32rpx;
  color: #000;
  margin-left: -1rpx;
}

.swipe-btn-wrapper {
  position: absolute;
  top: 11rpx;
  left: 50rpx;
  font-size: 30rpx;
  color: gray;
}

.share_alpha_Box {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* background: rgba(0, 0, 0, 0.2);  */
  overflow: hidden;
  z-index: 999;
}

.shareBox {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  height: 250rpx;
  /* box-shadow: 0 -3px 2rpx 0 #000; */
  border-top:2rpx solid #d7d9d9;
}

.share_button {
  display: flex;
  height: 150rpx;
  border-bottom: 1px solid #eaeaea;
  z-index: 999;
}

.share_item {
  display: flex;
  flex-direction: column;
  width: 49.88%;
  text-align: center;
  justify-content: center;
  background: #fff;
}

.share_line {
  height: 80%;
  background: #cbcbcb;
  width: 1px;
  margin-top: 16rpx;
}

.icon-logo-wechat {
  vertical-align: center;
  color: #5bcd44;
  font-size: 32px;
  line-height: 66rpx;
}

.icon-xiazai {
  vertical-align: center;
  color: #f5a824;
  font-size: 30px;
  line-height: 66rpx;
}

.share_txt {
  font-size: 28rpx;
  margin-top: 8rpx;
  padding: 0;
  line-height: 30rpx;
  
}

.stb {
  padding: 0;
  background-color: #fff;
  line-height: 25rpx;
}

.share_cancel {
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #0a0a0a;
}

@keyframes slidedown {
  from {
    transform: translateY(0);
  }

  to {
    transform: translateY(100%);
  }
}

.slidedown {
  animation: slidedown 0.1s linear;
}

.slideup {
  animation: slideup 0.1s linear;
}

@keyframes slideup {
  from {
    transform: translateY(100%);
  }

  to {
    transform: translateY(0);
  }
}

.containerMain {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height:91.7%;
}
