@import "../../icon/icon.wxss";

page {
  height: 100%;
  overflow: hidden;
  position: absolute;
}

.txt {
  font-size: 20rpx;
  color: #666;
  text-align: center;
  line-height: 35rpx;
  margin-top: 30rpx;
  display: block;
  letter-spacing: 2px;
}

.card_container {
  width: 85%;
  margin: 0 auto;
  height: 900rpx;
  margin-top: 20rpx;
}

.card_container image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.inputTxt {
  position: absolute;
  top: 240rpx;
  left: 77rpx;
  color: #fff;
  font-size: 60rpx;
  height: 550rpx;
}

.input-placeholder {
  color: #fff;
  font-size: 50rpx;
}

.creation_Title {
  position: absolute;
  top: 133rpx;
  left: 74rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  opacity: 0.9;
}

.createBtn {
  width: 220rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background-color: #01abe9;
  color: #fff;
  margin: 30rpx auto 0;
  font-size: 26rpx;
  border-radius: 50rpx;
  font-weight: 600;
}

.createBtn .icon-beizhu {
  margin-right: 6rpx;
}

.canvas {
  /* border: 1px solid #ccc; */
  width: 85%;
  height: 900rpx;
  word-break: break-all;
  overflow: hidden;
  margin-left: 7.5%;
}

.imgBtns {
  /* display: flex; */
  margin-top: 40rpx;
  margin-left: 100rpx;
}

.canvasBtn {
  border: none;
  background-color: #01abe9;
  color: #fff;
  font-weight: 600;
  line-height: 40rpx;
  font-size: 12px;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  float: left;
  margin-left: 50rpx;
}
